@{
    ViewData["Title"] = "Result";
}
@model List<LostAndFound2.Models.Item>
<div class="text-center">
    <div class="row mb-2">
    <h1  style="font-size:400%; font-family:Times New Roman; color:DarkCyan;">Matching Items</h1>
    </div>
          <div class="row">

    @foreach (LostAndFound2.Models.Item item in Model)
    {
        
    <div class="card mb-2 mx-1" style="width: 20rem;">
        <div class="card-body">
            <img src=@item.PhotoLink alt="Missed Item Image" />
            <div  style="margin-top: 15px;">
                <h5 class="card-title" >@item.Name</h5>
                <p class="card-text"> @item.Description</p>
            </div>
        </div>
            
        <div class="card-footer" style="color: gray;">Category: @item.Category | Color: @item.Color
            <p>Found By: @item.Owner.Name (@item.Owner.Phone)</p>
        </div>
          
    </div>
    }
</div>